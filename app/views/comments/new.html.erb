<%= form_for [@post, @comment] do |f| %>
	<% if @comment.errors.any? %>
		<h2>Errors</h2>
		<ul>
			<% @comment.errors.full_messages.each do |message| %>
				<li><%= message%></li>
			<% end %>
		</ul>
	<% end %>
	<%= f.label :comment_body%><br>
	<%= f.text_field :comment_body%><br>
	<br>
	<%= f.label :commenter%><br>
	<%= f.text_area :commenter%><br>
	<br>
	<%= f.submit %>
<% end %>